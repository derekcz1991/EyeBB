<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_list_unread" />

        <com.eyebb.customview.CircleImageView
            android:id="@+id/img"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/hugh"
            app:border_color="#FF000000"
            app:border_width="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/img" >

            <TextView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_arrow_go_big" />

            <LinearLayout
                android:id="@+id/details_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/arrow"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    style="@style/DarkGreyText_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Visiting S.K.H Lam Woo Memorial School" />

                <TextView
                    style="@style/BlackText_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014.07.01" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/img"
            android:alpha="0.1"
            android:background="@color/black" />
    </RelativeLayout>

</LinearLayout>