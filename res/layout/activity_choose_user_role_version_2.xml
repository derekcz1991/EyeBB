<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_yellow"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <!-- guset -->

    <LinearLayout
        android:id="@+id/guest_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="16dp" >

        <TextView
            style="@style/DarkGreyText_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:hint="@string/text_binding_device"
            android:singleLine="true" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_red" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_confirm"
            style="@style/WhiteText_18"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_bg_red"
            android:text="@string/btn_confirm" />

        <Button
            android:id="@+id/btn_skip"
            style="@style/WhiteText_18"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_bg_red"
            android:text="@string/btn_skip" />
    </LinearLayout>

</LinearLayout>