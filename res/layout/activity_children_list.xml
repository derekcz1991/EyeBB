        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.twinly.eyebb.customview.CircleImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/hugh"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/DarkGreyText_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kitty Chan" />

            <TextView
                android:id="@+id/location3"
                style="@style/BlackText_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@ Mess Hall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg_green"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_list_call" />

                    <TextView
                        android:id="@+id/phone_3"
                        style="@style/WhiteText_15"
