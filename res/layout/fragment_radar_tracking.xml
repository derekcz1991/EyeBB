            android:layout_height="1dp"
            android:alpha="0.1"
            android:src="@color/black" />

        <LinearLayout
            android:id="@+id/radar_beep_all_btn"
            android:layout_width="fill_parent"
            android:layout_height="47dp"
            android:alpha="0.9"
            android:background="@color/red"
