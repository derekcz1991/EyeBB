<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/liner_radar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <TextView
                style="@style/DarkGreyText_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/text_radar_tracking" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/radar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white" >

            <RelativeLayout
                android:id="@+id/layout_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="20dp" >

                <ImageView
                    android:id="@+id/radar_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bg_radar_circle" />

                <com.twinly.eyebb.customview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/hugh"
                    app:border_color="@color/red"
                    app:border_width="2dp" />

                <ImageView
                    android:id="@+id/bg_radar_rotate_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_radar_rotate" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_supervised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_circle"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp" >

                <LinearLayout
                    android:id="@+id/layout_supervised_liner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/radar_text_supervised_number_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="11dp"
                        android:src="@drawable/ic_radar_supervised" />

                    <TextView
                        android:id="@+id/radar_text_supervised_number"
                        style="@style/DarkGreyText_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="0" />
                </LinearLayout>

                <TextView
                    android:id="@+id/radar_text_supervised"
                    style="@style/DarkGreyText_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_supervised_liner"
                    android:text="Supervised" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_missed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/layout_circle"
                android:paddingBottom="8dp"
                android:paddingRight="8dp" >

                <LinearLayout
                    android:id="@+id/layout_missed_liner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/radar_text_missed_number_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_radar_missed" />

                    <TextView
                        android:id="@+id/radar_text_missed_number"
                        style="@style/DarkGreyText_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/radar_text_missed"
                    style="@style/DarkGreyText_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_missed_liner"
                    android:text="Missed" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa -->

    <RelativeLayout
        android:id="@+id/newslist_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:layout_below="@id/liner_radar"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white"
        android:descendantFocusability="blocksDescendants"
        android:marqueeRepeatLimit="marquee_forever" >

        <RelativeLayout
            android:id="@+id/newslist_item_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp" >

            <com.twinly.eyebb.customview.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/hugh"
                app:border_color="@color/red"
                app:border_width="2dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/newslist_kids_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/newslist_item_info_layout" >

            <TextView
                android:id="@+id/radar_list_kids_missd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:text="Missed "
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/radar_list_kids_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radar_list_kids_missd"
                android:text="Kitty Chan"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/radar_beep_all_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_bg_red"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_funcbar_beep" />

            <TextView
                style="@style/WhiteText_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="@string/text_beep" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <!-- aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa -->

    <ListView
        android:id="@+id/news_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liner_radar"
        android:layout_marginTop="338dp"
        android:cacheColorHint="#00000000"
        android:divider="#FFf1f1e5"
        android:dividerHeight="8dp" />

    <LinearLayout
        android:id="@+id/radar_beep_all_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_funcbar_beep" />

        <TextView
            style="@style/WhiteText_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_beep_all" >
        </TextView>
    </LinearLayout>

</RelativeLayout>