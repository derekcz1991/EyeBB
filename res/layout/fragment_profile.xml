<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/username"
            style="@style/DarkGreyText_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/options_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_settings" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/btn_activities"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_activities"
                    style="@style/RedText_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/text_notifications" />

                <TextView
                    android:id="@+id/red_divider_activities"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/red"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/black_divider_activities"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:alpha="0.1"
                    android:background="@color/black" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <TextView
                android:id="@+id/vi_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_list_unread" />

            <com.twinly.eyebb.customview.CircleImageView
                android:id="@+id/img"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/hugh"
                app:border_color="#FF000000"
                app:border_width="0dp" />

            <RelativeLayout
                android:id="@+id/notification_details_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/img" >

                <TextView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_arrow_go_big" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/arrow"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title"
                        style="@style/DarkGreyText_18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="幼兒園小一班已有3位幼兒確診腸病毒,請家長特別注意孩子的身體狀況與衛生習慣..." />

                    <TextView
                        style="@style/BlackText_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014.07.01" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/img"
                android:alpha="0.1"
                android:background="@color/black" />
        </RelativeLayout>

        <!-- 2 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <TextView
                android:id="@+id/vi_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_list_unread"
                android:visibility="gone" />

            <com.twinly.eyebb.customview.CircleImageView
                android:id="@+id/img1"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/head_img2"
                app:border_color="#FF000000"
                app:border_width="0dp" />

            <RelativeLayout
                android:id="@+id/notification_details_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/img1" >

                <TextView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_arrow_go_big" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/arrow1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title1"
                        style="@style/DarkGreyText_18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="公告102學年度幼兒園新生抽籤錄取名單 ..." />

                    <TextView
                        style="@style/BlackText_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014.07.03" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/img1"
                android:alpha="0.1"
                android:background="@color/black" />
        </RelativeLayout>
        <!-- 3 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <TextView
                android:id="@+id/vi_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_list_unread"
                android:visibility="gone" />

            <com.twinly.eyebb.customview.CircleImageView
                android:id="@+id/img2"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/head_img3"
                app:border_color="#FF000000"
                app:border_width="0dp" />

            <RelativeLayout
                android:id="@+id/notification_details_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/img2" >

                <TextView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_arrow_go_big" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/arrow2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title2"
                        style="@style/DarkGreyText_18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="幼稚園已出現5位確診腸病毒,請家長注意孩子身體狀況,並提醒勤洗手 ..." />

                    <TextView
                        style="@style/BlackText_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014.07.10" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/img2"
                android:alpha="0.1"
                android:background="@color/black" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>