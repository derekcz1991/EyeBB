<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WhiteText_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteText_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteText_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteText_24">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RedText_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="RedText_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="DarkGreyText_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="DarkGreyText_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="DarkGreyText_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="DarkGreyText_alpha50_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="DarkGreyText_28">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="LightGreyText_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="BlackText_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyDialogStyleActivity" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->
    </style>

    <style name="logo">
        <item name="android:src">@drawable/logo_cht</item>
></style>

</resources>